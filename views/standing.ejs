
<% include head %>

<body>
    <header>
        <% include header %>
    </header>
    <div class="main-div">
        <div class="sort-select-box">
            <h3>Sorting Options</h3>
            <div class="btn-group sort-by-btn-group" role="group">
                <button type="button" class="btn btn-primary" data-sort-value="strong">Strongest</button>
                <button type="button" class="btn btn-default" data-sort-value="weak">Weakest</button>
                <button type="button" class="btn btn-default" data-sort-value="name">Alphabetical</button>
                <button type="button" class="btn btn-default" data-sort-value="nameReverse">Reverse Alphabetical</button>
            </div>
        </div>
        <div class='hero-grid'>
            <% for(var i = 0; i < heroes.length; i++){ 
                hero = heroes[i]%>
                <div class="hero-wrap">
                    <img class="standing-img" src="<%=hero.img + 'full.png'%>">
                    <h2 class='hero-name'><%= hero.localized_name %></h2>
                    <% if(hero.totalVotes > 0){ %>
                        <h2 class="buff" data-category="buff">Buff! Score: <span class='votes'><%= hero.totalVotes %></span></h2>
                    <%  }
                        else if(hero.totalVotes < 0){ %>
                        <h2 class="nerf" data-category="nerf">Nerf! Score: <span class='votes'><%= hero.totalVotes %></span></h2>
                    <%  }else{ 
                            if(hero.totalVotes == null){
                                hero.totalVotes = 0
                            } %>
                        <h2 class="balanced" data-category="balanced">Balanced! Score: <span class='votes'><%= hero.totalVotes %></span></h2>
                    <%  } %>
                </div>
            <% } %>
        </div>
    </div>
    <footer><% include footer %></footer>
    <script src="javascripts/standing-sort.js"></script>
</body>
</html>